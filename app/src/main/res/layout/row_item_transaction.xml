<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="10dp">

        <TextView
                android:text="Transaction Id : 123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transIdTV"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Description: xyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTV"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/transIdTV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>
        <TextView
                android:text="Transaction Amount: 129.50 GBP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amountTV"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTV"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/amountTV"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>